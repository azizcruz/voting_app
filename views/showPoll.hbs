<div id="showPoll">
        <div class="col s12">
            <div class="row">
                <div class="col s12 m6 l6 poll-style">
                    <p id="votingMessage"></p>
                    {{#with poll as |poll|}}
                    <h5>{{poll.pollQuest}}</h5>
                    {{/with}}
                    <input type="hidden" id="pollID" value="{{id}}">
                        {{#each choices }}
                            <button name="vote" class="choicebtn" value="{{this}}">{{this}}</button>
                        {{/each}}
                </div>
    <div class="col s12 m6 l6">
        <div id="chart">
            <h3 class="center">Chart</h3>
            <div>
                <canvas id="myChart" width="100%" height="100%">

                </canvas>
            </div>
        </div>
    </div>
    </div>
    </div>
</div>