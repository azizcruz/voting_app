<div id="polls">

    {{!-- My polls for authenticated user --}}
    {{#if user}}
    <h3 class="center">My Polls</h3>
        <p id="message" class="message"></p>
        {{#if data}} 
            {{#each data}} 
                {{#with this as |poll|}} 
                    <div class="row">
                        <div class="col s12">
                            <a href="/polls/showPoll/{{poll._id}}">
                                <div class="card grey darken-1 hoverable">
                                    <div class="card-content white-text">
                                        <span class="card-title">{{poll.pollQuest}}</span>
                                        
                                        <a href="/polls/deletePoll/{{poll.id}}" class="deletePoll right red-text delete-poll"><i class="material-icons">delete</i></a>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </a>
                            
                        </div>
                    </div> 
                {{/with}} 
            {{/each}}  
            {{else}}
                <h4 class="noFound">No data found...</h4>
        {{/if}}

        {{else}}
            {{!-- All polls for unauthenticated users --}}
            <h3 class="center">All Polls</h3>
            {{#if data}} 
                {{#each data}} 
                    {{#with this as |poll|}} 
                        <div class="row">
                            <div class="col s12">
                                <a href="/polls/showPoll/{{poll._id}}">
                                    <div class="card grey darken-1 hoverable">
                                        <div class="card-content white-text">
                                            <span class="card-title">{{poll.pollQuest}}</span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div> 
                    {{/with}} 
                {{/each}}  
            {{else}}
                <h4 class="noFound">No data found...</h4>
            {{/if}}

    {{/if}}

    

</div>